{
    "compilerOptions": {
        "module": "ES2020",
        "target": "ES2020",
        "lib": ["DOM", "ES2020"],
        "moduleResolution": "node",
        "outDir": "dist/",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "declaration": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "compileOnSave": true
}
